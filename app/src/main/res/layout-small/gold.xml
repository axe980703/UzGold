<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/GoldLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_metal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="ПРОБА"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="9sp" />

        <Spinner
            android:id="@+id/spinner_currency_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:clipChildren="false" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/mainLayoutGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gold1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gold(583)"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="10sp" />

                <ProgressBar
                    android:id="@+id/pbgold1"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/progressBar"
                    android:indeterminateTintMode="src_atop" />

                <TextView
                    android:id="@+id/tvgold1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:minEms="5"
                    android:text="----------"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="true"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gold2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gold(750)"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="10sp" />

                <ProgressBar
                    android:id="@+id/pbgold2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/progressBar"
                    android:indeterminateTintMode="src_atop" />

                <TextView
                    android:id="@+id/tvgold2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:minEms="5"
                    android:text="----------"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="true"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gold3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gold(999)"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="10sp" />

                <ProgressBar
                    android:id="@+id/pbgold3"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentTop="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/progressBar"
                    android:indeterminateTintMode="src_atop" />

                <TextView
                    android:id="@+id/tvgold3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:minEms="5"
                    android:text="----------"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textIsSelectable="true"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context=".MainActivity">


        <EditText
            android:id="@+id/gold_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ems="5"
            android:hint="1"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:singleLine="true"
            android:text="1"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="гр"
            android:textColor="@android:color/black"
            android:textSize="8sp" />

        <RadioGroup
            android:id="@+id/gold_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:soundEffectsEnabled="true">

            <RadioButton
                android:id="@+id/rbgold1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="сум"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rbgold2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="у.е."
                android:textSize="10sp" />

        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="onUpdate"
            android:soundEffectsEnabled="true"
            android:src="@drawable/reload"
            app:elevation="6dp"
            app:fabSize="mini"
            app:pressedTranslationZ="12dp" />

    </LinearLayout>


</LinearLayout>

